            <li><button class="btn btn-passive" onclick="addReadingMask()"><i class="bi bi-box"></i> Reading Mask</button></li>
            <li><button class="btn btn-passive" onclick="setDyslexicFriendlyFont()"><i class="bi bi-type"></i> Dyslexia Friendly</button></li>
            <li><button class="btn btn-passive" onclick="toggleHighContrast()"><i class="bi bi-palette"></i> High Contrast</button></li>
            <li><button class="btn btn-passive" onclick="desaturateColors()"><i class="bi bi-droplet-half"></i> Desaturate</button></li>
            <li><button class="btn btn-passive" onclick="reduceSaturation()"><i class="bi bi-droplet"></i> Low Saturation</button></li>
            <li><button class="btn btn-passive" onclick="increaseSaturation()"><i class="bi bi-droplet-fill"></i> High Saturation</button></li>
        </ul>
    </div>

